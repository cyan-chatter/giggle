        <link rel="stylesheet" href="/css/style.css">
    </head>


    <body>
        
        {{> navbar}}

        <div class="main-content">
        <h3 id = "punyJudge">{{message}}</h3>
       <div id="friendsList"> 

            {{#each friends}}
            <div class= "friendsLoopBlock">
                <h3 class = "friendName">{{this.fullname}}</h3>
                <h4><a href="/findUser/{{this.username}}" style="text-decoration: none;" class ="friendUserName">{{this.username}}</a></h4>
                <button class="privateChatBtn btn btn-lg btn-primary" onclick="privateChatLinkage(this)">Chat</button>
                <button class="cancelFriendButton btn btn-lg btn-primary" onclick="cancelFriendshipBtnWork(this)">Remove Friendship</button>
            </div>
            {{/each}}

        </div> 

        <p class = "messageN"></p>
        <a style="display: none;" id="anchorToFriendsPage" href="/friends"></a>
        <p style="display: none;" id = "myUsername">{{myUsername}}</p>
        <br>
        </div>        

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
