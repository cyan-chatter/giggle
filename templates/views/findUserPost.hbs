    </head>


    <body>
        
        {{> navbar}}

    <p style="display: none;" id="activator">{{activate}}</p>
            


    <form class = "findUser" action="/findUser" method="POST">
        <label for="sUsername"><b>Search by Unique Username</b></label>
        <input type = "text" name = "sUsername">
        <input type = "submit" value = "Search" id = "searchByUsernameBtn">
    </form>

        <div id= "foundUser">
            <h3>{{username}}</h3>
            <h4>{{fullname}}</h4>
            <h5>{{about}}</h5>
            <p>hi</p>
            <form class = "addFriendBtnClass" action = "/addFriendRequest" method="POST">
                <input name = "friendRequestRecieverUsername" value="{{username}}" style="display: none;">
                <input class = "addFriendBtn" type = "submit" value = "Add Friend">
            </form>
    
        </div>
        <br>
        

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
