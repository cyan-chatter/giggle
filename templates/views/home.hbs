 <!DOCTYPE html>
<head>
    <title>home</title>>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>


<div class = "notify">
{{>messages}}
</div>

{{> navbar}}
  
<div class="col-md-12">
   <form action="#" method="post">
       <div class="form-group ad-30" style="margin-top:8px;">
            <div class="input-group search-style">
                <input class="form-control new-search-bar"  name="country" id="search" placeholder="Enter Your Club Name" type="text">
                <span class="input-group-btn">
                    <button class="btn input-btn" type="" id="search-form">Search</button>
                </span>
            </div>
        </div>
   </form>
</div>
  
<div class="col-md-12">
    <div class="">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="filter-container">
                            <div class="card">
                                <form action="#" method="post">
                                    <div class="content">
                                        <p class="filter">
                                            FILTER
                                        </p>
                                        <hr/>
                                        <select class="" name="country" id="country" >
                                            <option value="">Filter By Subject</option>
											{{#each subjects}}
                                            <option value="{{_id}}">{{_id}}</option>
											{{/each}}
                                        </select>
                                        <div class="clearfix"></div>
                                        <button class="btn add-apply">Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div>
                    {{#each camps}}
                    <div class="category-list">
                        <div class="row">
                            {{#this}}
                            <form action="#" method="post" id="add-fav">
                                <div class="item col-md-6">
                                    <a style="text-decoration: none;" href = "/camps/{{name}}">
                                    <div class="thumbnail">
                                       <img alt="">
                                        <div class="caption">
                                            <h3>{{name}}</h3>
                                            <div class="row">
                                                <div class="col-xs-12 col-md-6">
                                                    <p>
                                                        {{about}}
                                                    </p>
                                                </div>
                                                <div class="col-xs-12 col-md-6">
                                                    <h5>
                                                        {{subject}}
                                                    </h5>
                                                </div>
                                                <div class="col-xs-12 col-md-6">
                                                    <button class="btn add-fav">
                                                        Mark Favourite
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </a>
                                </div>
                            </form>
                        {{/this}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

    <div>
        <form action="/logout" method='post'>
            <input type='submit' value='Logout'>
       </form>
        <br>
        <form action="/logoutAll" method='post'>
            <input type='submit' value='LogoutAll'>
        </form>
    </div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>  
<script src = "../../utils/message-loader.js"></script>

</body>
</html>