    <body>
        
        {{> navbar}}

        <p id='activator' style="display: none;">{{activator}}</p>
       <div id="foundUsers"> 
        {{#each requester}}
        <div class= "loopBlock">

            <h3><a href="/findUser/:{{this.username}}" style="text-decoration: none;">{{this.username}}</a></h3>
            
            <div class="friendRequest">

                <div class = "friendRequestSenderUsername"  style="display: none;">{{this.username}}</div>

                <button class="acceptFriendBtn btn btn-lg btn-primary">Accept Friend Request</button>
                <button class="rejectFriendBtn btn btn-lg btn-primary">Reject Friend Request</button>
                <p class="identifier1" style="color:green;text-decoration:dotted;font-style:italic"></p>        
            
            </div>

        </div>
        {{/each}}
       </div> 
        <br>
        

